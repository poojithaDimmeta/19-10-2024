#include <stdio.h>
int main()
{
    int n, i, j, temp, mid;
    printf("Enter array size: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++)
        {
        scanf("%d", &arr[i]);
    }
   mid = n / 2;
  for (i = 0; i < mid; i++) {
        for (j = i + 1; j < mid; j++) {
            if (arr[i] > arr[j]) {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
    for (i = mid; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (arr[i] < arr[j]) {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
  printf("First half (ascending): ");
    for (i = 0; i < mid; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    printf("Second half (descending): ");
    for (i = mid; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
