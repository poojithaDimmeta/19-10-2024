#include <stdio.h>
int main()
{
    int m, y;
    printf("Enter month (1-12): ");
    scanf("%d", &m);
    printf("Enter year: ");
    scanf("%d", &y);
    int daysinmonth[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    if ((y%4==0 && y%100!=0) || y%400==0)
    {
        daysinmonth[1]=29;
    }
    if (m>=1 && m<=12)
    {
        printf("Month %d, %d has %d days.\n", m, y, daysinmonth[m- 1]);
    }
    else
    {
        printf("Invalid month. Please enter 1-12.\n");
    }

    return 0;
}
